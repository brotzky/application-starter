{
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact"
  ],
  "flow.useNPMPackagedFlow": true,
  "javascript.validate.enable": false,
  "prettier.cssEnable": [
    "css",
    "scss"
  ],
  "prettier.jsonEnable": [],
  "prettier.javascriptEnable": [
    "javascript",
    "javascriptreact"
  ],
  "prettier.parser": "flow",
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "all",
  "scss.validate": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/build": true
  }
}